<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	   
	<EditText 
        android:id="@+id/edit_hint_formtion"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:hint="@string/module_tactical_editText_formtion"
         />
     
     <EditText 
        android:id="@+id/edit_hint_description"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:hint="@string/module_tactical_editText_description"
         />
    
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:orientation="horizontal"
        >
        
	    <Button
	        android:id="@+id/button_confirm"
	        android:layout_width="fill_parent"
	        android:layout_height="44dp"
	        android:layout_centerInParent="true"
	        android:textSize="12sp"
	        android:background="@drawable/button_comfirm"/>
    </RelativeLayout>
	       
</LinearLayout >